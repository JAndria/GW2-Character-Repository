<%= form_for(@character) do |f| %>
  <% if @character.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@character.errors.count, "error") %> prohibited this character from being saved:</h2>

      <ul>
      <% @character.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :level %><br>
    <%= f.number_field :level %>
  </div>
  <div class="field">
    <%= f.label :gender %><br>
    <%= f.select(:gender, options_for_select([['Female', 'Female'], ['Male', 'Male']])) %>
  </div>
  <div class="field">
    <%= f.label :race %><br>
    <%= f.select(:race, options_for_select([['Asura', 'Asura'], ['Charr', 'Charr'], ['Human', 'Human'], ['Norn', 'Norn'], ['Sylvari', 'Sylvari']])) %>
  </div>
  <div class="field">
    <%= f.label :profession %><br>
    <%= f.select(:profession, options_for_select([['Elementalist', 'Elementalist'], ['Engineer', 'Engineer'], ['Guardian', 'Guardian'], ['Mesmer', 'Mesmer'], ['Necromancer', 'Necromancer'], ['Ranger', 'Ranger'], ['Revenant', 'Revenant'], ['Thief', 'Thief'], ['Warrior', 'Warrior']])) %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :image_url %><br>
    <%= f.text_field :image_url %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
